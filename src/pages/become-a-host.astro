---
import Layout from "@layouts/Default.astro";
import Card from "@components/generic/Card.astro";
import RainbowButton from "@components/generic/RainbowButton.astro";

// Fixed bright colors from RainbowButton
const letterColors = {
    S: "#ff66cc", // Pink
    o: "#bb66ff", // Purple
    c: "#33ddff", // Blue
    i: "#ffdd33", // Yellow
    a: "#33ffbb", // Mint
    l: "#ff66cc", // Pink
    " ": "#FFFFFF", // White for space
    p: "#bb66ff", // Purple
    t: "#33ddff", // Blue
};

const benefits = [
    {
        icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
        title: "You Have Full Control",
        description:
            "We don't tell you how to run your events. You decide what works for you. how much you want to charge, how many people you want to invite, etc.",
    },
    {
        icon: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z",
        title: "Any Event Format",
        description:
            "Any event format you want. Speed dating, mixers, workshops, anything you can think of - create events that work for you.",
    },
    {
        icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
        title: "Zero Tech Hassle",
        description:
            "Sit back and relax. We handle the tech, payments, marketing, and matching all you need to do is do what you do best and create great experiences for your patrons.",
    },
];

const features = [
    {
        icon: "M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z",
        title: "Marketing Support",
        description:
            "Get exposure to our growing community through our platform and channels, we can also assist you with running paid advertising campaigns if you wish.",
    },
    {
        icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
        title: "Quality Attendees",
        description:
            "We have a growing community of engaged, social singles who are looking for meaningful connections. We also have a growing database of potential attendees who we can match to your event.",
    },
    {
        icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
        title: "We've Got Your Back",
        description:
            "We've done this before, we've hosted events and know what works and what doesn't. We can help you plan your event and run it smoothly.",
    },
];

const steps = [
    {
        number: "01",
        title: "Get in Touch",
        description:
            "Contact us to schedule a call about your goals and event ideas.",
    },
    {
        number: "02",
        title: "Plan Your Event",
        description:
            "We'll help design the perfect event format for you and your goals.",
    },
    {
        number: "03",
        title: "We Handle the Rest",
        description:
            "Focus on the experience while we manage bookings and payments.",
    },
];
---

<Layout
    title="Become a Host | Social Spot"
    pageTitle="Become a Host | Social Spot"
    description="Partner with Social Spot to host engaging singles events. You keep 100% of ticket sales while we handle the tech, marketing, and matching."
>
    <div class="bg-gradient-to-b from-[#B8E8FF] to-white min-h-screen">
        <main class="max-w-[1400px] mx-auto">
            {/* Hero Section with Split Design */}
            <div class="grid lg:grid-cols-2 gap-8 p-8">
                <div class="flex flex-col justify-center">
                    <h1
                        class="text-5xl lg:text-7xl font-bold mb-6 poppins leading-tight"
                    >
                        Partner With<br />
                        <span class="flex">
                            {
                                "Social Spot".split("").map((letter, index) => (
                                    <span
                                        class="logo-text"
                                        style={{
                                            // @ts-ignore
                                            color: letterColors[letter],
                                            animation: `colorCycle 4s linear infinite, float 2s ease-in-out infinite`,
                                            animationDelay: `${index * 0.2}s, ${index * 0.1}s`,
                                            display: "inline-block",
                                        }}
                                    >
                                        {letter}
                                    </span>
                                ))
                            }
                        </span>
                    </h1>
                    <p class="text-xl lg:text-2xl mb-8 poppins max-w-xl">
                        You keep 100% of ticket sales. We handle bookings,
                        payments, and marketing.
                    </p>
                    <div>
                        <a
                            data-cal-link="socialspot/socialspot-quick-chat"
                            data-cal-namespace="socialspot-quick-chat"
                            data-cal-config='{"layout":"month_view"}'
                        >
                            <RainbowButton class="text-lg w-full">
                                Talk to us
                            </RainbowButton>
                        </a>
                    </div>
                </div>
                <div class="relative">
                    <div
                        class="absolute inset-0 bg-black/5 rounded-3xl transform rotate-3"
                    >
                    </div>
                    <Card>
                        <div class="p-8">
                            <h2 class="text-2xl font-bold mb-6 poppins">
                                Simple Pricing, It's Free!
                            </h2>
                            <ul class="space-y-4">
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-6 h-6 text-green-500 flex-shrink-0 mt-1"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        ></path>
                                    </svg>
                                    <span class="text-lg"
                                        >You keep 100% of ticket sales</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-6 h-6 text-green-500 flex-shrink-0 mt-1"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        ></path>
                                    </svg>
                                    <span class="text-lg"
                                        >You keep 100% of food & drink or any
                                        other purchases the customer makes when
                                        attending your event</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-6 h-6 text-green-500 flex-shrink-0 mt-1"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        ></path>
                                    </svg>
                                    <span class="text-lg"
                                        >15% booking fee charged to customers
                                        covers our costs</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-6 h-6 text-green-500 flex-shrink-0 mt-1"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        ></path>
                                    </svg>
                                    <span class="text-lg"
                                        >Still 100% Free to host free events
                                        with no ticket price - no hidden fees</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </Card>
                </div>
            </div>

            {/* Process Steps */}
            <section class="mb-8 px-8 py-8">
                <div class="text-center mb-12">
                    <h2 class="text-4xl lg:text-5xl font-bold mb-4 poppins">
                        How it works
                    </h2>
                    <p class="text-xl max-w-2xl mx-auto poppins">
                        Three simple steps to host your first event with Social
                        Spot
                    </p>
                </div>
                <div class="max-w-6xl mx-auto">
                    <div class="relative">
                        {/* Connection Line */}
                        <div
                            class="hidden lg:block absolute top-1/2 left-0 right-0 h-1 bg-black transform -translate-y-1/2"
                        >
                        </div>

                        <div class="grid lg:grid-cols-3 gap-8 relative">
                            {
                                steps.map((step, index) => (
                                    <div class="relative">
                                        <Card>
                                            <div class="flex flex-col h-full p-6">
                                                <div class="flex items-center justify-between mb-6">
                                                    <span class="text-5xl font-bold text-black poppins">
                                                        {step.number}
                                                    </span>
                                                </div>
                                                <h3 class="text-xl font-medium mb-3 poppins">
                                                    {step.title}
                                                </h3>
                                                <p class=" poppins flex-grow">
                                                    {step.description}
                                                </p>
                                            </div>
                                        </Card>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <div class="mt-16 text-center">
                        <a
                            data-cal-link="socialspot/socialspot-quick-chat"
                            data-cal-namespace="socialspot-quick-chat"
                            data-cal-config='{"layout":"month_view"}'
                        >
                            <RainbowButton class="text-lg w-full">
                                Talk to us
                            </RainbowButton>
                        </a>
                    </div>
                </div>
            </section>

            {/* Core Benefits */}
            <section class="mb-8 px-8 py-8">
                <div class="text-center mb-12">
                    <h2 class="text-4xl lg:text-5xl font-bold mb-4 poppins">
                        Core Benefits
                    </h2>
                    <p class="text-xl max-w-2xl mx-auto poppins">
                        Everything you need to run successful events
                    </p>
                </div>
                <div class="grid lg:grid-cols-3 gap-8">
                    {
                        benefits.map((benefit) => (
                            <Card>
                                <div class="flex flex-col items-center text-center h-full p-6">
                                    <div class="w-12 h-12 rounded-xl flex items-center justify-center mb-4">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="w-8 h-8 text-black"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d={benefit.icon}
                                            />
                                        </svg>
                                    </div>
                                    <h3 class="text-xl font-medium mb-3 poppins">
                                        {benefit.title}
                                    </h3>
                                    <p class=" poppins">
                                        {benefit.description}
                                    </p>
                                </div>
                            </Card>
                        ))
                    }
                </div>
            </section>
            {/* Additional Features */}
            <section class="mb-8 px-8 py-8">
                <div class="text-center mb-12">
                    <h2 class="text-4xl lg:text-5xl font-bold mb-4 poppins">
                        Additional Features
                    </h2>
                    <p class="text-xl max-w-2xl mx-auto poppins">
                        Everything else we provide
                    </p>
                </div>
                <div class="grid lg:grid-cols-3 gap-8">
                    {
                        features.map((feature) => (
                            <Card>
                                <div class="flex flex-col items-center text-center h-full p-6">
                                    <div class="w-12 h-12 rounded-xl flex items-center justify-center mb-4">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="w-8 h-8 text-black"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d={feature.icon}
                                            />
                                        </svg>
                                    </div>
                                    <h3 class="text-xl font-medium mb-3 poppins">
                                        {feature.title}
                                    </h3>
                                    <p class=" poppins">
                                        {feature.description}
                                    </p>
                                </div>
                            </Card>
                        ))
                    }
                </div>
            </section>

            {/* Final CTA */}
            <section class="px-8 pb-16">
                <Card>
                    <div class="p-12 text-center">
                        <h2 class="text-4xl lg:text-5xl font-bold mb-6 poppins">
                            Ready to Get Started?
                        </h2>
                        <p class="text-xl mb-8 poppins max-w-2xl mx-auto">
                            Book a quick phone call with us to discuss your
                            goals and event ideas, we can also answer any other
                            questions you may have.
                        </p>
                        <a
                            data-cal-link="socialspot/socialspot-quick-chat"
                            data-cal-namespace="socialspot-quick-chat"
                            data-cal-config='{"layout":"month_view"}'
                        >
                            <RainbowButton class="text-lg w-full">
                                Talk to us
                            </RainbowButton>
                        </a>
                    </div>
                </Card>
            </section>
        </main>
    </div>
</Layout>

<style>
    .logo-text {
        text-shadow:
            -1px -1px 0 #000,
            1px -1px 0 #000,
            -1px 1px 0 #000,
            1px 1px 0 #000,
            3px 3px 0 #000;
        transform-origin: center;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-2px);
        }
    }

    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .animate-gradient {
        animation: gradient 8s linear infinite;
    }

    @keyframes colorCycle {
        0%,
        100% {
            color: #ff66cc;
        } /* Pink */
        20% {
            color: #bb66ff;
        } /* Purple */
        40% {
            color: #33ddff;
        } /* Blue */
        60% {
            color: #ffdd33;
        } /* Yellow */
        80% {
            color: #33ffbb;
        } /* Mint */
    }

    @media (min-width: 768px) {
        .logo-text {
            text-shadow:
                -1px -1px 0 #000,
                1px -1px 0 #000,
                -1px 1px 0 #000,
                1px 1px 0 #000,
                4px 4px 0 #000;
        }
    }
</style>
